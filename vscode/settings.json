{
    "editor.tabSize": 2,
    "editor.lineHeight": 17,
    "editor.wordWrap": "on",
    "editor.fontFamily": "'DejaVu Sans Mono', 'Menlo', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "window.zoomLevel": 0,
    
    // filetype specific settings
    "[markdown]": {
        "editor.tabSize": 2
    },

    // colorscheme settings
    "workbench.colorTheme": "Ocean Dark Extended",
    "nightswitch.dayTheme": "Default Light+",
    "nightswitch.nightTheme": "Ocean Dark Extended",

    // vim settings
    "vim.useSystemClipboard": true,
    "keyboard.dispatch": "keyCode",

    // configure python env
    "python.venvPath": "~/Developer/virtualenv/",
    
    // extension settings
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.historyExplorer.enabled": true,
    "latex-workshop.message.update.show": false,
    "markdown-preview-enhanced.scrollSync": true,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*",
                "isAsync": true,
                "cmd": "bash ~/dotfiles/vscode/sync_extensions.sh"
            }
        ]
    }

}