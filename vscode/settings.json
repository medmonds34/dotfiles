{
  "editor.tabSize": 2,
  "editor.lineHeight": 22,
  "editor.wordWrap": "on",
  "editor.fontFamily": "'JetBrains Mono', 'Source Code Pro', 'DejaVu Sans Mono', 'DejaVu Sans Code', 'Menlo', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "files.trimTrailingWhitespace": true,
  // filetype specific settings
  "[markdown]":
  {
    "editor.tabSize": 2
  },

  // vim settings
  "vim.useSystemClipboard": true,
  "keyboard.dispatch": "keyCode",

  // configure python env
  "python.venvPath": "~/Developer/virtualenv/",

  // extension settings
  "gitlens.advanced.messages":
  {
    "suppressShowKeyBindingsNotice": true
  },
  "latex-workshop.message.update.show": false,
  "markdown-preview-enhanced.scrollSync": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",

  "pasteImage.path": "./images",
  "python.formatting.provider": "black",
  "gitlens.views.lineHistory.enabled": true,

  "window.titleBarStyle": "native",
  "C_Cpp.clang_format_style": "{BasedOnStyle: Chromium, ColumnLimit: 120, BreakBeforeBraces: Allman}",
  "C_Cpp.clang_format_fallbackStyle": "Chromium",
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.default.cppStandard": "c++03",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "python.pythonPath": "/Users/mark/miniconda3/envs/random/bin/python",
  "terminal.integrated.inheritEnv": false,
  "python.condaPath": "~/miniconda3/bin/conda",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "workbench.colorTheme": "Atom One Light",
  "themeSwitcher.themesList": "Ocean Dark Extended,Atom One Dark,Atom One Light",
  "debug.console.fontSize": 16,
  "python.languageServer": "Pylance",
  "beautify.config": "",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "python.defaultInterpreterPath": "/Users/mark/miniconda3/envs/random/bin/python",
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "editor.inlineSuggest.enabled": true,
}

