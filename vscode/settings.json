{
    "editor.tabSize": 2,
    "editor.lineHeight": 17,
    "editor.wordWrap": "on",
    "editor.fontFamily": "'DejaVu Sans Mono', 'Menlo', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "window.zoomLevel": 1,
    
    // colorscheme settings
    "workbench.colorTheme": "Ocean Dark Extended",
    "nightswitch.dayTheme": "Default Light+",
    "nightswitch.nightTheme": "Ocean Dark Extended",

    // vim settings
    "vim.useSystemClipboard": true,
    "keyboard.dispatch": "keyCode",

    // configure python env
    "python.venvPath": "~/Developer/virtualenv/",
    
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    }
}