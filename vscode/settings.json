{
  "editor.tabSize": 2,
  "editor.lineHeight": 17,
  "editor.wordWrap": "on",
  "editor.fontFamily": "'DejaVu Sans Mono', 'DejaVu Sans Code', 'Menlo', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "window.zoomLevel": 0,

  // filetype specific settings
  "[markdown]":
  {
    "editor.tabSize": 2
  },

  // colorscheme settings
  "workbench.colorTheme": "Ocean Dark Extended",
  "nightswitch.themeDay": "Default Light+",
  "nightswitch.themeNight": "Ocean Dark Extended",

  // vim settings
  "vim.useSystemClipboard": true,
  "keyboard.dispatch": "keyCode",

  // configure python env
  "python.venvPath": "~/Developer/virtualenv/",

  // extension settings
  "gitlens.advanced.messages":
  {
    "suppressShowKeyBindingsNotice": true
  },
  "latex-workshop.message.update.show": false,
  "markdown-preview-enhanced.scrollSync": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "emeraldwalk.runonsave":
  {
    "commands": [
    {
      "match": ".*",
      "isAsync": true,
      "cmd": "bash ~/dotfiles/vscode/sync_extensions.sh"
    }]
  },
  "pasteImage.path": "./images",
  "nightswitch.autoSwitch": false,
  "python.formatting.provider": "black",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "theme-by-language.themes":
  {
    "*": "Ocean Dark Extended",
    "markdown": "Atom One Dark",
  },
  "window.titleBarStyle": "native",
  "C_Cpp.clang_format_style": "{BasedOnStyle: Chromium, ColumnLimit: 120, BreakBeforeBraces: Allman}",
  "C_Cpp.clang_format_fallbackStyle": "Chromium",
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.default.cppStandard": "c++03",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "python.pythonPath": "~/miniconda3/bin/python",
  "terminal.integrated.inheritEnv": false,
  "python.condaPath": "~/miniconda3/bin/conda",
}